<form method='post' action='/students/<%= @student.id %>'>
  <label for='first-name'>First Name:</label>
  <input id='first-name' type="text" name="first_name" value="<%= @student.first_name %>" />
  <br>

  <label for="last-name">Last Name:</label>
  <input id="last-name" type="text" name="last_name" value="<%= @student.last_name %>">
  </br>

  <label for='house-select'>Select a House</label>
  <select id='house-select' name='house_id'>
    <% @houses.each do |house| %>
    <option value="<%= house.id %>" %> <%= "selected" if @student.house_id == house.id  %>><%= house.house_name %>
    </option>
    <% end %>
  </select>
  <br>

  <label for='age'>Age</label>
  <input id='age' type="number" name="age" value="<%= @student.age %>" />
  <br>

  <input type="submit" value="Update Student">
</form>